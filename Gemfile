source 'https://rubygems.org'
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

gem 'bootsnap', require: false
gem 'dotenv-rails'
gem 'jbuilder'
gem 'mysql2'
gem 'pry-rails'
gem 'puma'
gem 'rails'
gem 'redis'
gem 'sass-rails'
gem 'turbolinks'
gem 'webpacker'

group :development, :test do
  gem 'byebug'
  gem 'rubocop-rails'
end

group :development do
  gem 'listen'
  gem 'rack-mini-profiler'
  gem 'spring'
  gem 'web-console'
end

group :test do
  gem 'capybara'
  gem 'factory_bot_rails'
  gem 'rspec_junit_formatter'
  gem 'rspec-rails'
  gem 'selenium-webdriver'
  gem 'webdrivers'
end
